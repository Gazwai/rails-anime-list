<div>
  <h1 class="font-bold text-4xl">Lists#index</h1>
  <p>Find me in app/views/lists/index.html.erb</p>

  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <p><%= list.name %></p>
    <% end %>

    <% list.animes.each do |anime| %>
      <%= image_tag anime.image_url, width: 200, height: 300 %>
    <% end %>
  <% end %>

  <div>
    <h3>Create a new list</h3>
    <%= simple_form_for @list do |f| %>
      <%= f.input :name, placeholder: 'List Name' %>
      <%= f.submit class: '' %>
    <% end %>
  </div>
</div>
