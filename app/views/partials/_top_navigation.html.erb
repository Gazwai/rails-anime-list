<div class="navbar bg-base-100 hidden justify-between sm:flex w-[48rem] mx-auto">
  <div class="navbar-start">
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h7">
          </path>
        </svg>
      </div>
      <ul
        tabindex="0"
        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
        <li>
          <%= link_to lists_path, class: "flex gap-4" do %>
            <%= icon "home", library: "heroicons", class: "h-5 w-5" %>
            <span class="btm-nav-label text-xs">Lists</span>
          <% end %>
        </li>
        <li>
          <%= link_to animes_path, class: "flex gap-4" do %>
            <%= icon "bookmark-square", library: "heroicons", class: "h-5 w-5" %>
            <span class="btm-nav-label text-xs">Animes</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="navbar-center">
    <% if @list %>
      <%= simple_form_for @list, html: { class: "grid-cols-3 w-full max-w-sm gap-4 grid "}  do |f| %>
        <%= f.input :name, label: false, placeholder: "List Name", input_html: { class: "input input-bordered w-full max-w-sm" }, wrapper_html: { class: "col-span-2 mb-0" } %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
  <div class="navbar_end">
  </div>
</div>
