<h1>Sign Up</h1>

<%= simple_form_for @user, html: { class: "space-y-6" } do |f| %>
  <div>
    <%= f.input :email_address, input_html: { class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" }, label_html: { class: "block text-sm font-medium text-gray-700" } %>
  </div>

  <div>
    <%= f.input :password, input_html: { class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" }, label_html: { class: "block text-sm font-medium text-gray-700" } %>
  </div>

  <div>
    <%= f.input :password_confirmation, input_html: { class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring focus:ring-blue-300" }, label_html: { class: "block text-sm font-medium text-gray-700" } %>
  </div>

  <div>
    <%= f.button :submit, "Create Account", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-lg hover:bg-blue-600" %>
  </div>
<% end %>

<%= link_to "Back to Home", root_path, class: "text-blue-500 hover:underline" %>
