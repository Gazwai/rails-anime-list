<div class="card bg-neutral text-neutral-content lg:card-side shadow-xl">
  <figure>
    <%= image_tag anime.image_url, class: "w-full h-48 object-cover rounded-md" %>
  </figure>

  <div class="card-body">
    <h2 class="card-title"><%= anime.title %></h2>
    <p><%= truncate(anime.overview, length: 200, separator: ' ', omission: ' [Read more]')%></p>
    <p>Score: <%= anime.rating %></p>

    <div class="card-actions justify-end">
      <button class="btn btn-primary">Add to List</button>
    </div>
  </div>
</div>
